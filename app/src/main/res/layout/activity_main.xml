<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fb2b2b">
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/centerLayout">

        <TextView
            android:layout_marginBottom="20dp"
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agenzia"
            android:id="@+id/labelAgenzia"
            />
        <RelativeLayout
            android:id="@+id/layoutAgenzie"
            android:layout_below="@+id/labelAgenzia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_layout"
            android:layout_marginBottom="20dp">
            <Spinner
                android:dropDownSelector="#aef7fd"
                android:layout_centerHorizontal="true"
                android:id="@+id/agenzie"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
            </Spinner>
        </RelativeLayout>


        <TextView
            android:layout_marginBottom="20dp"
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:textColor="#fff"
            android:layout_below="@+id/layoutAgenzie"
            android:id="@+id/labelNbus"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÂ° Bus"
             />
        <RelativeLayout
        android:background="@drawable/corner_layout"
        android:layout_below="@+id/labelNbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:dropDownSelector="#aef7fd"
            android:id="@+id/nBus"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
           </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btnTrack"
        android:background="@drawable/corner_layout"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/centerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRACCIA BUS"
        android:padding="10dp"/>

</RelativeLayout>